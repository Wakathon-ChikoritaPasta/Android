<?xml version="1.0" encoding="utf-8"?>
<!-- res/values/styles.xml -->
<resources>

    <style name="NoUnderlineEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
    </style>
    <style name="Theme.Gamagochi.Login" parent="Base.Theme.Gamagochi">
        <item name="android:statusBarColor">@color/background_pink</item> <!-- RegisterActivity의 배경색으로 설정 -->
    </style>
    <style name="Theme.Gamagochi.Register" parent="Base.Theme.Gamagochi">
        <item name="android:statusBarColor">@color/white</item> <!-- RegisterActivity의 배경색으로 설정 -->
    </style>

    <style name="ProgressBarNoPaddingGray" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:padding">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:progressDrawable">@color/primary_light</item> <!-- 테두리 제거 -->
        <item name="android:progressBackgroundTint">@color/primary_light</item>
        <item name="android:progressTint">@color/primary_normal</item>
    </style>
</resources>
